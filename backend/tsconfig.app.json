{
  "include": ["env.d.ts", "src/**/*", "index.ts"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "target": "es6",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "sourceMap": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "composite": true,
    "declaration": true,

    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
